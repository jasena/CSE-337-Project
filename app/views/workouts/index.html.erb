<h2>Listing Workouts</h2>

<hr>
<div class="span6" style="float:right">
<%= link_to 'New Workout', new_workout_path %>	
</div>
<br>

<% @workouts.each do |workout|  %>
    <div class="span10 hero-unit">
      <div class="span6" style="float:left">
        <span class="title"> Title: <%=  workout.name %> </span>
      </div>
      <div class="span3" style="float:right">
        <span class="title"> Release date: <%= workout.workout_date %></span>
      </div>
      <div class="span9">
        <span class="rating"> Type of Workout: <%= workout.kind %> </span>
      </div>
      <div class="span9">
        <span class="rating"> Duration of Workout: <%= workout.duration %> </span>
      </div>

      <div class="span1" style="float: right; text-align: right;">
        <%= link_to 'Edit'.html_safe, edit_workout_path(workout) %>
      </div>
      
      <div class="span1" style="float: right; text-align: right;">
      <%= link_to "Delete".html_safe, workout_path(workout), method: :delete %>
      </div>
      
      <div class="span1" style="float: right; text-align: right;">
      <%= link_to "Show".html_safe, workout_path(workout) %>
      </div>
                  
    </div>

<% end %>
