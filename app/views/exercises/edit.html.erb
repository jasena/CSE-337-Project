<div class="span10" xmlns="http://www.w3.org/1999/html">
  <h2> Edit the Workout </h2>
  <hr>
  <div class="span9">
    <%= form_for(@exercises, :html => { :class => "form-horizontal" } ) do |f| %>
    <div class="control-group">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => 'input-large' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :workout_type, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :workout_type, :class => 'input-large' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :duration, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :duration, :class => 'input-large' %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.button :submit %>
      </div>
    </div>
    <% end %>
  </div>
</div>