<h2>Displaying motivational quote #<%= @quote.id %></h2>

<p id="notice"><%= notice %></p>

<hr />

<div class="row-fluid">
	<div class="span12 hero-unit">
		<span class="title"><%= @quote.content + ' - ' + @quote.author %></span>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 hero-unit" style="text-align:center; vertical-align:text-middle;">
		<%= link_to 'Edit', edit_motivation_path(@quote) %>
	</div>
	<div class="span6 hero-unit" style="text-align:center; vertical-align:text-middle;">
		<%= link_to 'Return', motivation_index_path %>
	</div>
</div>